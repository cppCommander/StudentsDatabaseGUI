<Window x:Class="Students.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Students"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
         WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="addListButton" Content="Add student" HorizontalAlignment="Left" Margin="51,36,0,0" VerticalAlignment="Top" Width="75" Click="AddListButton_Click"/>
        <Button x:Name="refreshListButton" Content="List students" HorizontalAlignment="Left" Margin="51,89,0,0" VerticalAlignment="Top" Width="75" Click="RefreshListButton_Click"/>
        <DataGrid x:Name="DataGrid1" HorizontalAlignment="Left" Height="335" Margin="168,48,0,0" VerticalAlignment="Top" Width="539" SelectionChanged="DataGrid_SelectionChanged"/>

    </Grid>
</Window>
